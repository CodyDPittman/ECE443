-- 256X16 RAM Data Memory Unit

---------------------------------------------------------------------------------------------

Library ieee;
use ieee.std_logic_1164.all;	
use ieee.numeric_std.all;

---------------------------------------------------------------------------------------------

entity RAM_16X16 is
	port(
	address: in std_logic_vector(7 downto 0);	--------------------------------------------- For the 256 address locations
	data_in: std_logic_vector(15 downto 0);	   	--------------------------------------------- 16 bit input
	write_in: in std_logic;						--------------------------------------------- Enables data to be written in
	clock: in std_logic;						--------------------------------------------- Clock used for sequential statements
	data_out: out std_logic_vector(15 downto 0)	--------------------------------------------- 16 bit output
	);
end RAM_16X16;

--------------------------------------------------------------------------------------------

