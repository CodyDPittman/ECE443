begin
	process(clock)
	begin
		if(rising_edge(clock)) then
			if(write_in='1') then
				ram_data(to_integer(unsigned(address))) <= data_in;
			end if;
		end if;
	end process;
	
	data_out <= ram_data(to_integer(unsigned(address)));
	
end Behavioral;
