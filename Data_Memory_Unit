-------------------------------------------------------------------------------------------- 

begin
	process(clock)
	begin														   		--------------------------------------------- Begin process
		if(rising_edge(clock)) then										--------------------------------------------- If rising edge of the clock is encountered
			if(write_in='1') then										--------------------------------------------- If write_in is '1'
				ram_data(to_integer(unsigned(address))) <= data_in;		--------------------------------------------- Write the input to the indicated address
			end if;														--------------------------------------------- End if statement
		end if;															--------------------------------------------- End if statement
	end process;														--------------------------------------------- End process
	
	data_out <= ram_data(to_integer(unsigned(address)));				--------------------------------------------- Send data from address to the ouput data line
	
end Behavioral;
